// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id               Int                @id @default(autoincrement())
  studentImageId   Int
  combatClass      StudentCombatClass // 스트라이커, 스페셜
  star             Int                @db.TinyInt // 몇성인지
  weaponType       WeaponType // 무기타입
  weaponImageId    Int
  role             StudentRole // 학생 역할
  attackType       StudentAttackType // 공격 속성
  armorType        StudentArmorType // 장갑 속성
  schoolId         Int // 학교
  urbanAffinity    Affinity
  outdoorsAffinity Affinity
  indoorsAffinity  Affinity
  equipment1       Int
  equipment2       Int
  equipment3       Int
}

model Asset {
  id     Int      @id @default(autoincrement())
  url    String
  School School[]
}

model School {
  id           Int    @id @default(autoincrement())
  name         String
  imageAsset   Asset  @relation(fields: [imageAssetId], references: [id])
  imageAssetId Int
}

enum StudentRole {
  Attacker
  Support
  Tank
  Tactical_Support
}

enum StudentCombatClass {
  Striker
  Special
}

enum StudentAttackType {
  Explosive // 폭발
  Penetration // 관통
  Mystic // 신비
}

enum StudentArmorType {
  Light // 경장갑
  Heavy // 중장갑
  Special // 특수장갑
  Elastic // 탄력장갑
}

enum WeaponType {
  HG // 권총
  SG // 샷건
  SMG // 기관단총
  AR // 돌격소총
  SR // 저녁총
  MG // 기관총
  RG // 레일건
  GL // 유탄발사기
  MT // 박격포
  // FT // 화염방사기
}

enum Affinity {
  D
  C
  B
  A
  S
  SS
}

enum equipment {
  Hat // 모자
  Gloves // 장갑
  Shoes // 신발
  Bag // 가방
  Badge // 배지
  Hairpin // 헤어핀
  Charm // 부적
  Watch // 손목시계
  Necklace // 목걸이
}
