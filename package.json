{
	"name": "ydkim",
	"version": "0.0.0",
	"private": true,
	"description": "Monorepo of ydkim",
	"homepage": "https://github.com/YedramKim/ydkim#readme",
	"bugs": {
		"url": "https://github.com/YedramKim/ydkim/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/YedramKim/ydkim.git"
	},
	"license": "ISC",
	"author": "",
	"workspaces": {
		"packages": [
			"packages/*",
			"boilerplates/*"
		],
		"nohoist": [
			"**/@storybook/vue3",
			"**/@storybook/vue3/**"
		]
	},
	"scripts": {
		"build": "lerna run build",
		"clean": "lerna run clean && rimraf yarn.lock && rimraf node_modules",
		"force-install": "yarn clean; yarn install",
		"ncu": "ncu && lerna exec --stream -- npx ncu",
		"sort-package-json": "sort-package-json && lerna exec -- npx sort-package-json",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"create-next-app": "12.0.10",
		"create-react-app": "5.0.0",
		"npm-check-updates": "12.3.1",
		"prettier": "2.5.1",
		"rimraf": "3.0.2",
		"sort-package-json": "1.54.0"
	},
	"devDependencies": {
		"lerna": "4.0.0"
	}
}
