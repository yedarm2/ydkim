{
	"name": "ydkim",
	"version": "0.0.0",
	"private": true,
	"description": "Monorepo of ydkim",
	"homepage": "https://github.com/YedramKim/ydkim#readme",
	"bugs": {
		"url": "https://github.com/YedramKim/ydkim/issues"
	},
	"repository": "git+https://github.com/YedramKim/ydkim.git",
	"license": "ISC",
	"author": "yedarm778 <jjkg2000k@naver.com>",
	"main": "index.js",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"boilerplates/*"
		],
		"nohoist": [
			"**/@storybook/vue3",
			"**/@storybook/vue3/**"
		]
	},
	"scripts": {
		"build": "lerna run build",
		"clean": "lerna run clean && rimraf yarn.lock && rimraf node_modules",
		"deploy": "lerna run deploy",
		"lint": "lerna run lint",
		"ncu": "ncu && npx lerna exec --stream -- npx ncu",
		"serve": "lerna run serve",
		"sort-package-json": "sort-package-json && lerna exec -- npx sort-package-json",
		"test": "lerna run test"
	},
	"dependencies": {
		"create-next-app": "14.1.1",
		"create-react-app": "5.0.1",
		"npm-check-updates": "16.14.15",
		"prettier": "3.2.5",
		"rimraf": "5.0.5",
		"sort-package-json": "2.8.0"
	},
	"devDependencies": {
		"lerna": "8.1.2"
	}
}
